<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.otodu.Controller.MentorController"
            prefWidth="1280.0" prefHeight="720.0">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="250.0" style="-fx-background-color: #375679;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="OTODU" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button text="Dashboard" fx:id="dashboardBtn" maxWidth="200"
                    style="-fx-background-color: #375679; -fx-text-fill: white;" />
            <Button text="Mentor" fx:id="mentorBtn" maxWidth="200"
                    style="-fx-background-color: #4A6FA5; -fx-text-fill: white;" />
            <Button text="Materi" fx:id="materiBtn" maxWidth="200"
                    style="-fx-background-color: #375679; -fx-text-fill: white;" />
            <Button fx:id="latihanBtn" maxWidth="200" style="-fx-background-color: #375679; -fx-text-fill: white;" text="Latihan" />
            <Button fx:id="logoutBtn"
                    maxWidth="200"
                    prefHeight="40"
                    alignment="CENTER"
                    graphicTextGap="10"
                    style="-fx-background-color: rgba(255, 255, 255);
               -fx-text-fill: #495DA3;
               -fx-font-size: 14px;
               -fx-font-weight: bold;
               -fx-background-radius: 8;
               -fx-cursor: hand;">
                <text>Keluar</text>
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@../../../Gambar/logout2.png" />
                        </image>
                    </ImageView>
                </graphic>

            </Button>
        </VBox>
    </left>

    <!-- KONTEN UTAMA -->
    <center>
        <StackPane fx:id="dashboardStack">
            <VBox spacing="10" style="-fx-background-color: #F5F7FA; -fx-padding: 20 20 20 30;">

                <!-- HBox: Judul & Tombol Tambah -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Daftar Mentor"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #757575;" />

                    <Pane HBox.hgrow="ALWAYS"/> <!-- Spacer -->

                    <Button fx:id="tambahMentorBtn" text="Tambah Mentor"
                            style="-fx-background-color: #495DA3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-family: 'Poppins Bold'; -fx-background-radius: 6;"
                            prefHeight="40" prefWidth="180"/>
                </HBox>

                <!-- Scroll daftar mentor -->
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox fx:id="mentorContainer" spacing="15" style="-fx-padding: 10;" />
                    </content>
                </ScrollPane>

            </VBox>

            <!-- Overlay Loading -->
            <AnchorPane fx:id="overlayPane" visible="false"
                        style="-fx-background-color: rgba(0, 0, 0, 0.3);"
                        StackPane.alignment="CENTER">
                <StackPane prefWidth="1280" prefHeight="720" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                    <ProgressIndicator fx:id="loadingIndicator"
                                       maxWidth="100" maxHeight="100" />
                </StackPane>
            </AnchorPane>
        </StackPane>

    </center>

</BorderPane>
